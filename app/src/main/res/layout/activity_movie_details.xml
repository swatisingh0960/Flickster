<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingStart="16dp"
    tools:context="com.swatisingh0960.github.flickster.MovieDetails">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@mipmap/ic_launcher"
        android:id="@+id/ivDetailsPoster"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="The Magnificent Seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDetailsTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivDetailsPoster"
        android:layout_toEndOf="@+id/ivDetailsPoster"
        android:layout_marginTop="11dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbRating"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_below="@+id/tvDetailsTitle"
        android:layout_toRightOf="@+id/ivDetailsPoster"
        android:layout_toEndOf="@+id/ivDetailsPoster" />

    <TextView
        android:text="Release Date:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDetailsReleaseDateLabel"
        android:layout_below="@+id/ivDetailsPoster"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="hello"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDetailsReleaseDate"
        android:layout_alignBaseline="@+id/tvDetailsReleaseDateLabel"
        android:layout_alignBottom="@+id/tvDetailsReleaseDateLabel"
        android:layout_toRightOf="@+id/tvDetailsReleaseDateLabel"
        android:layout_toEndOf="@+id/tvDetailsReleaseDateLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPopularityLabel"
        android:text="Popularity:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/tvDetailsReleaseDateLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPopularity"
        android:layout_alignBaseline="@+id/tvPopularityLabel"
        android:layout_alignBottom="@+id/tvPopularityLabel"
        android:layout_toRightOf="@+id/tvPopularityLabel"
        android:layout_toEndOf="@+id/tvPopularityLabel" />

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDetailsDescription"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="A big screen remake of John Sturges' classic western The Magnificent Seven, itself a remake of Akira Kurosawa's Seven Samurai. Seven gun men in the old west gradually come together to help a poor village against savage thieves."
        android:layout_below="@+id/tvPopularityLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>